<div class="outside">
  <h1>Editing Book</h1>
  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %><br>
    <br>
    <%= f.submit 'Update Book' %>
  <% end %>
  <div class="inside"></div>
  <%= link_to "Show", book_path(@book) %>
  <span> | </span>
  <%= link_to "Back", books_path %>
</div>