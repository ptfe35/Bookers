<div class="notice"><%= notice %></div>
<header>
  <h1>Books</h1>
</header>
<main>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book)%></td>
          <td><%= link_to "Destroy", destroy_book_path(book.id) , method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="inside"></div>
  <h1>New book</h1>
  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
    <div class="error">
      <h3 class="error1"><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li class="error2"><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %><br>
    <br>
    <%= f.submit 'Create Book' %>
  <% end %>
</main>